{% extends "plantillaBase.php.twig" %}


{% block titulo %}
    <!--Fabio Benitez Ramirez-->
    <h1 style="color: white" class="mt-4">Sectores</h1>

{% endblock %}

{% block contenido %}


    <a href="#addnew" class="btn btn-primary" data-toggle="modal"><span class="glyphicon glyphicon-plus"></span> Nuevo Registro</a>
    <a href="index.php" class="btn btn-primary" > Atras</a>
    {% if dat is empty %}
        <h3 style="color: white">En este momento no hay Sectores</h3>
    {% else %}

        <div id="columnas" class="row mb-3 "> <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">Nombre sector</th>
                        <th><a data-toggle="modal" data-target="#myModal1">
                                <span class="glyphicon glyphicon-plus"></span>
                            </a></th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in dat %}
                        <tr>
                            <th scope="col">{{ item.id }}</th>
                            <th scope="col">{{ item.nombre }}</th>
                            <th scope="col"><a href="#edit_{{ item.id }}" class="btn btn-success btn-sm" data-toggle="modal"><span class="glyphicon glyphicon-edit"></span> Editar</a></th>
                            <th scope="col"><a href="#delete_{{ item.id }}" class="btn btn-danger btn-sm" data-toggle="modal"><span class="glyphicon glyphicon-trash"></span> Borrar</a> 
                            
                        </tr>
                        {%  include 'BorrarEditarModalSector.php.twig'%} 
                    {% endfor %}
                </tbody>
            </table>

        </div>   


    {% endif %}



    <!-- The Modal -->
    {%  include 'AgregarModalSector.php.twig'%} 
{% endblock %}

